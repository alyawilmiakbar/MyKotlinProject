<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".MainActivity"
        android:background="#FFFFFF">
    <TextView
            android:text="SELAMAT DATANG DI UNIVERSITAS TEKNOLOGI YOGYAKARTA"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#C62828"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:id="@+id/imageView"
            android:foregroundTint="#EEDFDF"
            android:tint="#00404040"
            android:clickable="false"
            android:cropToPadding="false"
            app:srcCompat="@drawable/uty"/>
    <EditText
            android:id="@+id/nimEt"
            android:hint="Masukan Nomor Induk Mahasiswa"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/namaEt"
            android:hint="Masukan Nama"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <EditText
            android:id="@+id/nilaiEt"
            android:hint="Masukkan Nilai"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:id="@+id/prosesBtn"
            android:text="Proses"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#EAECF0"
            android:backgroundTint="#132791"
            android:background="#3C5FBB"/>
</LinearLayout>